        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateBarberRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Barbero actualizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Barber"
                }
              }
